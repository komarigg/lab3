<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="BattleCity.MainMenu"
        Width="450"
        Height="450"
        Title="Battle City - Главное меню"
        WindowStartupLocation="CenterScreen"
        Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <Border Background="DarkGreen" CornerRadius="10" Padding="20,10" Margin="0,0,0,20">
                <TextBlock Text="BATTLE CITY" 
                          Foreground="Gold" 
                          FontSize="36" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>
            
            <Button Name="StandardLevelsButton" 
                   Content="СТАНДАРТНЫЕ УРОВНИ" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Width="250" 
                   Height="60"
                   FontSize="20"
                   FontWeight="Bold"
                   Background="DarkGreen"
                   Foreground="White"
                   BorderBrush="Gold"
                   BorderThickness="2"
                   CornerRadius="5"
                   Cursor="Hand"/>
            
            <Button Name="CustomLevelsButton" 
                   Content="КАСТОМНЫЕ УРОВНИ" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Width="250" 
                   Height="60"
                   FontSize="20"
                   FontWeight="Bold"
                   Background="DarkBlue"
                   Foreground="White"
                   BorderBrush="LightBlue"
                   BorderThickness="2"
                   CornerRadius="5"
                   Cursor="Hand"/>
            
            <Button Name="ExitButton" 
                   Content="ВЫХОД" 
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Width="180" 
                   Height="40"
                   FontSize="16"
                   Background="DarkRed"
                   Foreground="White"
                   BorderBrush="Red"
                   BorderThickness="2"
                   CornerRadius="5"
                   Margin="0,30,0,0"
                   Cursor="Hand"/>
            
            <TextBlock Text="Battle City v1.0" 
                      Foreground="Gray" 
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>